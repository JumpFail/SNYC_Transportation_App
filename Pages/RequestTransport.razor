@page "/request"
@inject ITransportRequestService TransportRequestService

<PageTitle>Request Transport</PageTitle>

<h1>Request Transport</h1>

<EditForm Model="inputModel" OnValidSubmit="SubmitAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <InputText id="name" class="form-control" @bind-Value="inputModel.Name" />
    </div>

    <div class="mb-3">
        <label for="age" class="form-label">Age</label>
        <InputNumber id="age" class="form-control" @bind-Value="inputModel.Age" />
    </div>

    <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <InputText id="address" class="form-control" @bind-Value="inputModel.Address" />
    </div>

    <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <InputText id="phone" class="form-control" @bind-Value="inputModel.PhoneNumber" />
    </div>

    <button type="submit" class="btn btn-primary">Send Request</button>
</EditForm>

@if (!string.IsNullOrWhiteSpace(successMessage))
{
    <div class="alert alert-success mt-3">@successMessage</div>
}

@code {
    private TransportRequestInput inputModel = new();
    private string? successMessage;

    private async Task SubmitAsync()
    {
        await TransportRequestService.CreateAsync(inputModel);

        successMessage = "Your request has been sent to SNYC admin.";
        inputModel = new TransportRequestInput();
    }
}
